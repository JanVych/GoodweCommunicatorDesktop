<Page x:Class="GoodweReaderDesktop.Views.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      xmlns:helpers="using:GoodweReaderDesktop.Helpers">

    <Page.Resources>
        <helpers:RegisterTypeToStringConverter x:Key="RegisterTypeConverter" />
        <helpers:BooleanNegationConverter x:Key="BooleanNegationConverter" />
    </Page.Resources>

    <Grid x:Name="ContentArea"
          RowSpacing="20"
          ColumnDefinitions="*, *"
          RowDefinitions="auto, auto, auto">
        
        <StackPanel Grid.Column="0"
                    Grid.Row="0"
                    HorizontalAlignment="Stretch"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="{StaticResource OverlayCornerRadius}"
                    Padding="24"
                    Spacing="12">
            <Grid ColumnDefinitions="auto, *"
                  ColumnSpacing="24">
                <TextBlock Text="Goodwe device"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           TextAlignment="Center"
                           Style="{StaticResource TitleTextBlockStyle}" />

                <ProgressRing IsActive="{x:Bind ViewModel.IsInputEnabled, Converter={StaticResource BooleanNegationConverter}, Mode=OneWay}"
                              Grid.Column="1"
                              Width="50"
                              Height="50"
                              VerticalAlignment="Center"
                              HorizontalAlignment="Right"/>
                <!--<Button Grid.Column="1"
                        VerticalAlignment="Center"
                        Height="60"
                        Content="Connect"
                        HorizontalAlignment="Right"
                        Command="{x:Bind ViewModel.ConnectCommand}">
                </Button>-->
            </Grid>
            <Grid ColumnDefinitions="2*, 1*, 1*"
                  ColumnSpacing="24">
                <TextBox Header="Ip address:"
                         Grid.Column="0"
                         VerticalAlignment="Center"
                         TextAlignment="Center"
                         HorizontalAlignment="Stretch"
                         IsEnabled="{x:Bind ViewModel.IsInputEnabled, Mode=OneWay}"
                         Text="{x:Bind ViewModel.IpAddress, Mode=TwoWay}"/>
                <NumberBox Header="Port:"
                           Grid.Column="1"
                           Maximum="65535"
                           Minimum="0"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Stretch"
                           IsEnabled="{x:Bind ViewModel.IsInputEnabled, Mode=OneWay}"
                           Value="{x:Bind ViewModel.Port, Mode=TwoWay}"/>
                <NumberBox Header="Device Address:"
                           Grid.Column="2"
                           Maximum="255"
                           Minimum="0"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Stretch"
                           IsEnabled="{x:Bind ViewModel.IsInputEnabled, Mode=OneWay}"
                           Value="{x:Bind ViewModel.DeviceAddress, Mode=TwoWay}" />
            </Grid>
        </StackPanel>
        
        <StackPanel Grid.Column="0"
                    Grid.Row="1"
                    HorizontalAlignment="Stretch"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="{StaticResource OverlayCornerRadius}"
                    Padding="24"
                    Spacing="12">
            <Grid ColumnDefinitions="auto, *"
                  ColumnSpacing="24">
                <TextBlock Text="Read register"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           TextAlignment="Center"
                           Style="{StaticResource TitleTextBlockStyle}" />
                <Button Grid.Column="1"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Right"
                        Width="60"
                        Height="60"
                        Command="{x:Bind ViewModel.ReadRegisterCommand}"
                        IsEnabled="{x:Bind ViewModel.IsInputEnabled, Mode=OneWay}">
                    <FontIcon Glyph="&#xE725;"
                              FontSize="24" />
                </Button>
            </Grid>
            <Grid ColumnDefinitions="3*, 2*"
                  ColumnSpacing="20">
                <NumberBox Grid.Column="0"
                           VerticalAlignment="Center"
                           Header="Address"
                           IsEnabled="{x:Bind ViewModel.IsInputEnabled, Mode=OneWay}"
                           Value="{x:Bind ViewModel.ReadRegisterAddress, Mode=TwoWay}" />
                <ComboBox x:Name="ReadRegisterType"
                          Header="Type"
                          Grid.Column="1"
                          VerticalAlignment="Center"
                          HorizontalAlignment="Stretch"
                          ItemsSource="{x:Bind ViewModel.RegisterTypesList}"
                          SelectedItem="{x:Bind ViewModel.ReadRegisterType, Mode=TwoWay}"
                          IsEnabled="{x:Bind ViewModel.IsInputEnabled, Mode=OneWay}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Converter={StaticResource RegisterTypeConverter}}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </Grid>
            <Grid ColumnDefinitions="*, *"
                  ColumnSpacing="20">
                <NumberBox x:Name="ReadRegisterValue"
                           VerticalAlignment="Center"
                           Header="Value"
                           IsEnabled="False"
                           ValueChanged="ReadRegisterValue_ValueChanged"
                           Value="{x:Bind ViewModel.ReadRegisterValue, Mode=TwoWay}"/>
                <TextBox x:Name="ReadRegisterValueHex"
                         Grid.Column="1"
                         VerticalAlignment="Center"
                         Header="Hexadecimal value:"
                         PlaceholderText="0"
                         IsEnabled="False"/>
            </Grid>
        </StackPanel>

        <StackPanel Grid.Column="0"
                    Grid.Row="2"
                    HorizontalAlignment="Stretch"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="{StaticResource OverlayCornerRadius}"
                    Padding="24"
                    Spacing="12">
            <Grid ColumnDefinitions="auto, *"
                  ColumnSpacing="24">
                <TextBlock Text="Write register"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           TextAlignment="Center"
                           Style="{StaticResource TitleTextBlockStyle}" />
                <Button x:Name="WriteRegisterButton"
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Right"
                        Width="60"
                        Height="60"
                        Command="{x:Bind ViewModel.WriteRegisterCommand}"
                        IsEnabled="{x:Bind ViewModel.IsInputEnabled, Mode=OneWay}">
                    <FontIcon Glyph="&#xE725;"
                              FontSize="24" />
                </Button>
            </Grid>
            <Grid ColumnDefinitions="3*, 2*"
                  ColumnSpacing="20">
                <NumberBox x:Name="WriteRegisterAddress"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           Header="Register address:"
                           IsEnabled="{x:Bind ViewModel.IsInputEnabled, Mode=OneWay}"
                           Value="{x:Bind ViewModel.WriteRegisterAddress, Mode=TwoWay}" />
                <ComboBox x:Name="WriteRegisterType"
                          Header="Type"
                          Grid.Column="1"
                          VerticalAlignment="Center"
                          HorizontalAlignment="Stretch"
                          SelectionChanged="WriteRegisterType_SelectionChanged"
                          ItemsSource="{x:Bind ViewModel.RegisterTypesList}"
                          SelectedItem="{x:Bind ViewModel.WriteRegisterType, Mode=TwoWay}"
                          IsEnabled="{x:Bind ViewModel.IsInputEnabled, Mode=OneWay}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Converter={StaticResource RegisterTypeConverter}}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </Grid>
            <Grid ColumnDefinitions="*, *"
                  ColumnSpacing="24">

                <NumberBox x:Name="WriteRegisterValue"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           Header="Register value:"
                           ValueChanged="WriteRegisterValue_ValueChanged"
                           IsEnabled="{x:Bind ViewModel.IsInputEnabled, Mode=OneWay}"
                           Value="{x:Bind ViewModel.WriteRegisterValue, Mode=TwoWay}" />
                <TextBox x:Name="WriteRegisterValueHex"
                         Grid.Column="1"
                         VerticalAlignment="Center"
                         Header="Register value hex:"
                         PlaceholderText="0"
                         TextChanged="WriteRegisterValueHex_TextChanged"
                         IsEnabled="{x:Bind ViewModel.IsInputEnabled, Mode=OneWay}" />
            </Grid>
        </StackPanel>

        <Border  Grid.Column="1"
                 Grid.RowSpan="3"
                 Margin="20,0,20,0"
                 MaxHeight="730"
                 Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                 CornerRadius="{StaticResource OverlayCornerRadius}"
                 Padding="24">
            <ScrollView >
                <TextBlock Text="{x:Bind ViewModel.OutputText, Mode=TwoWay}" Foreground="DarkOliveGreen"/>
            </ScrollView>
        </Border>


    </Grid>
</Page>
