<Page x:Class="GoodweReaderDesktop.Views.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <Grid x:Name="ContentArea"
          RowSpacing="20"
          ColumnDefinitions="*"
          RowDefinitions="auto, auto, auto">
        
        <StackPanel Grid.Column="0"
                    Grid.Row="0"
                    HorizontalAlignment="Stretch"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="{StaticResource OverlayCornerRadius}"
                    Padding="24"
                    Spacing="12">
            <Grid ColumnDefinitions="auto, *"
                  ColumnSpacing="24">
                <TextBlock Text="Goodwe device"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           TextAlignment="Center"
                           Style="{StaticResource TitleTextBlockStyle}" />
                <Button x:Name="ConnectButton"
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        Height="60"
                        Content="Connect"
                        HorizontalAlignment="Right">
                    <!--<FontIcon Glyph="&#xE725;"
                              FontSize="24" />-->
                </Button>
            </Grid>
            <Grid ColumnDefinitions="2*, 1*"
                  ColumnSpacing="24">
                <TextBox Header="Ip address:"
                         PlaceholderText="192.168.0.240"
                         Grid.Column="0"
                         VerticalAlignment="Center"
                         TextAlignment="Center"
                         HorizontalAlignment="Stretch"/>
                <TextBox Header="Port:"
                         PlaceholderText="8899"
                         Grid.Column="1"
                         VerticalAlignment="Center"
                         TextAlignment="Center"
                         HorizontalAlignment="Stretch"/>
            </Grid>
        </StackPanel>
        
        <StackPanel Grid.Column="0"
                    Grid.Row="1"
                    HorizontalAlignment="Stretch"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="{StaticResource OverlayCornerRadius}"
                    Padding="24"
                    Spacing="12">
            <Grid ColumnDefinitions="auto, *"
                  ColumnSpacing="24">
                <TextBlock Text="Read register"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           TextAlignment="Center"
                           Style="{StaticResource TitleTextBlockStyle}" />
                <Button x:Name="ReadRegisterButton"
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Right"
                        Width="60"
                        Height="60">
                    <FontIcon Glyph="&#xE725;"
                              FontSize="24" />
                </Button>
            </Grid>
            <NumberBox x:Name="ReadRegisterAddress"
                       VerticalAlignment="Center"
                       Header="Register address:"
                       Value="0"
                       Maximum="65535"
                       Minimum="0"/>
            <NumberBox x:Name="ReadRegisterVakue"
                       VerticalAlignment="Center"
                       Header="Register value:"
                       Value="0"
                       Maximum="65535"
                       Minimum="0"
                       IsEnabled="False"/>
        </StackPanel>

        <StackPanel Grid.Column="0"
                    Grid.Row="2"
                    HorizontalAlignment="Stretch"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="{StaticResource OverlayCornerRadius}"
                    Padding="24"
                    Spacing="12">
            <Grid ColumnDefinitions="auto, *"
                  ColumnSpacing="24">
                <TextBlock Text="Write register"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           TextAlignment="Center"
                           Style="{StaticResource TitleTextBlockStyle}" />
                <Button x:Name="WriteRegisterButton"
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Right"
                        Width="60"
                        Height="60">
                    <FontIcon Glyph="&#xE725;"
                              FontSize="24" />
                </Button>
            </Grid>
            <NumberBox x:Name="WriteRegisterAddress"
                       VerticalAlignment="Center"
                       Header="Register address:"
                       Value="0"
                       Maximum="65535"
                       Minimum="0"/>
            <Grid ColumnDefinitions="*, *"
                  ColumnSpacing="24">

                <NumberBox x:Name="WriteRegisterValue"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           Header="Register value:"
                           Value="0"
                           Maximum="65535"
                           Minimum="0"/>
                <TextBox x:Name="WriteRegisterVakueHex"
                         Grid.Column="1"
                         VerticalAlignment="Center"
                         Header="Register value hex:"
                         PlaceholderText="0"/>
            </Grid>
        </StackPanel>
        
    </Grid>
</Page>
